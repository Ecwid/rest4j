<api xmlns="http://rest4j.com/api-description">

	<model name="Pet" class="com.rest4j.impl.petapi.Pet">
		<fields>
			<simple name="id" type="number" access="readonly"/>
			<simple name="name" type="string"/>

			<!-- No such property in com.rest4j.impl.Pet; test that this field is mapped
			to a Service method argument -->
			<simple name="testProp" type="string" access="writeonly"/>
		</fields>
	</model>

	<endpoint http="GET">
		<route>/pets/<param>id</param></route>
		<description></description>
		<parameters>
			<parameter name="id" optional="false" type="number"/>
		</parameters>
		<response>
			<json type="Pet"/>
		</response>
		<errors></errors>
		<service name="pets"/>
	</endpoint>

	<endpoint http="PUT">
		<route>/pets/<param>id</param></route>
		<description></description>
		<parameters>
			<parameter name="id" optional="false" type="number"/>
		</parameters>
		<body>
			<patch type="Pet"/>
		</body>
		<errors></errors>
		<service name="pets"/>
	</endpoint>
</api>