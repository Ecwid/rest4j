<api xmlns="http://rest4j.com/api-description" xmlns:html="http://www.w3.org/1999/xhtml">

	<model name="A" class="java.lang.Object">
		<fields>
			<complex name="b1" collection="singleton" type="B" access="readonly"></complex>
			<complex name="b2" collection="map" type="B"></complex>
			<complex name="bs" collection="array" type="B"></complex>
		</fields>
	</model>
	<model name="B" class="java.lang.Object">
		<fields>
			<complex name="c" collection="singleton" type="C"></complex>
		</fields>
	</model>
	<model name="C" class="java.lang.Object">
		<fields>
			<simple name="changeable" type="number" access="writeonly">
				<description>Changes something.<html:p/></description>
			</simple>
		</fields>
	</model>

	<endpoint http="PATCH" httpsonly="true">
		<route>patch/<param>ID</param></route>
		<description><html:title>Patch an A</html:title> And return <html:b>C</html:b>.</description>
		<parameters>
			<parameter name="ID" type="number">
				<description>The unique ID</description>
			</parameter>
			<parameter name="access-token" optional="false">
				<description>Access token</description>
				<values>
					<value description="Description of SOME">SOME</value>
					<value>ANOTHER</value>
				</values>
			</parameter>
			<parameter name="some" optional="false" type="date">
			</parameter>
		</parameters>
		<body>
			<patch type="A"/>
		</body>
		<response>
			<json type="C"/>
		</response>
		<errors></errors>
		<service name="patch" method="patch"/>
		<extra><group>Patching</group></extra>
	</endpoint>

	<endpoint http="PATCH" httpsonly="true">
		<route>patch/b/<param>ID</param></route>
		<description><title>Patch a B</title> And return <b>C</b>.</description>
		<parameters>
			<parameter name="ID" type="number">
				<description>The unique ID</description>
			</parameter>
			<parameter name="access-token" optional="false">
				<description>Access token</description>
				<values>
					<value description="Description of SOME">SOME</value>
					<value>ANOTHER</value>
				</values>
			</parameter>
			<parameter name="some" optional="false" type="date">
			</parameter>
		</parameters>
		<body>
			<patch type="B"/>
		</body>
		<response>
			<json type="C"/>
		</response>
		<errors></errors>
		<service name="patch" method="patch_b"/>
		<extra><group>Patching</group></extra>
	</endpoint>

	<endpoint http="GET">
		<route>get</route>
		<description><title>Get B</title>x</description>
		<parameters></parameters>
		<response>
			<json type="B"></json>
		</response>
		<errors></errors>
		<service name="get" method="get"/>
		<extra><group>Getting</group></extra>
	</endpoint>
	
	<endpoint http="GET">
		<route>binary</route>
		<description><title>Get binary</title>x</description>
		<parameters></parameters>
		<response>
			<binary></binary>
		</response>
		<errors></errors>
		<service name="binary" method="binary"/>
		<extra><group>Getting</group></extra>
	</endpoint>
		
</api>
